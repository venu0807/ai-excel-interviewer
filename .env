# AI Excel Interviewer - Environment Configuration

# FREE API KEYS FOR DEMO (Replace with your own keys)
# Get free API keys from:
# OpenAI: https://platform.openai.com/api-keys (Free tier available)
# Anthropic: https://console.anthropic.com/ (Free tier available)

# Anthropic Claude API (Recommended)
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# OpenAI GPT API (Alternative/Backup)
OPENAI_API_KEY=sk-your_openai_key_here

# DEMO MODE - Set to true to use mock responses (no API keys needed)
DEMO_MODE=true

# Application Configuration
APP_NAME=AI Excel Interviewer
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=*

# Interview Configuration
MAX_INTERVIEW_DURATION=30  # minutes
MAX_QUESTIONS_PER_INTERVIEW=10
DEFAULT_SKILL_LEVEL=beginner

# LLM Configuration
DEFAULT_LLM_MODEL=claude  # claude or gpt
MAX_TOKENS=1000
TEMPERATURE=0.7

# Logging Configuration
LOG_FILE=logs/interviewer.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5
