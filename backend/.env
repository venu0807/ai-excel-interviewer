# AI Excel Interviewer - Environment Configuration

# Local Llama 3 Configuration
model_path="llama3:latest"
LLAMA_N_CTX=4096
LLAMA_N_THREADS=4
LLAMA_TEMPERATURE=0.7

# Application Configuration
APP_NAME=AI Excel Interviewer
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=*

# Interview Configuration
MAX_INTERVIEW_DURATION=30  # minutes
MAX_QUESTIONS_PER_INTERVIEW=10
DEFAULT_SKILL_LEVEL=beginner

# LLM Configuration
DEFAULT_LLM_MODEL=claude  # claude or gpt
MAX_TOKENS=1000
TEMPERATURE=0.7

# Logging Configuration
LOG_FILE=logs/interviewer.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5
